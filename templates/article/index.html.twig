{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-header">
                            <table class="table mt-4">
                                <thead>
                                <tr>
                                    <th>â„–</th>
                                    <th>Title</th>
                                    <th>publishedAt</th>
                                    <th>Authors</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for article in articles %}
                                    <tr>
                                        <th>{{ article.id }}</th>
                                        <td>{{ article.title }}</td>
                                        <td>{{ article.createdAt? article.createdAt|date('Y-m-d H:i:s'): '' }}</td>
                                        <td>
                                            {% for author in article.authors %}
                                                <a
                                                        class="btn btn-primary"
                                                        href={{ path('article_show', {'id': author.id}) }}>
                                                    {{ author.name }}
                                                </a>
                                            {% endfor %}
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td>No records </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

